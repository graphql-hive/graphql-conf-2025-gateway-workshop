{
  "name": "graphql-conf-2025-gateway-workshop",
  "type": "module",
  "private": true,
  "workspaces": [
    "subgraphs/*"
  ],
  "scripts": {
    "format": "prettier --check --write .",
    "subgraphs": "bun -F './subgraphs/*' start",
    "compose": "mesh-compose -o supergraph.graphql",
    "start": "bun run --watch node_modules/.bin/hive-gateway supergraph"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.11.2",
    "@graphql-hive/gateway": "^2.1.2",
    "@graphql-mesh/compose-cli": "^1.4.17",
    "@nats-io/transport-node": "^3.1.0",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.15.2",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.6.2"
  }
}
