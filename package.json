{
  "name": "graphql-conf-2025-gateway-workshop",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "subgraphs/*"
  ],
  "scripts": {
    "check:format": "prettier --check .",
    "format": "bun check:format --write",
    "check:types": "tsc --noEmit",
    "compose": "mesh-compose -o supergraph.graphql",
    "subgraphs": "bun -F './subgraphs/*' start",
    "start": "hive-gateway supergraph",
    "gen-jwt": "bun run ./scripts/gen-jwt.ts"
  },
  "dependencies": {
    "@graphql-hive/gateway": "^2.0.3",
    "@graphql-hive/pubsub": "^2.1.0",
    "@graphql-mesh/compose-cli": "^1.4.15",
    "@nats-io/transport-node": "^3.1.0",
    "@opentelemetry/context-async-hooks": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.204.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
